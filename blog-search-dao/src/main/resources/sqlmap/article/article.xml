<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="article">

	<!-- 结果集 -->
	<resultMap id="orderInfoResult" type="com.yy.domain.Artical.Article">
		<result property="id" column="id" />
		<result property="pageviews" column="pageviews" />
		<result property="title" column="title" />
		<result property="describes" column="describes" />
		<result property="greatNumber" column="great_number" />
		<result property="badNumber" column="bad_number" />
		<result property="content" column="content" />
		<result property="createDate" column="create_date" />
		<result property="creator" column="creator" />
		<result property="dr" column="dr" />
	</resultMap>
	
	<!-- 查询字段-->
	<sql id="orderInfoField">
		id,pageviews,title,describes,great_number,bad_number,content,create_date,creator,dr
	</sql>

    <!-- 新增 -->	
	<insert id="insertArticle" parameterType="article">
		insert into article
			(id,pageviews,title,describes,great_number,bad_number,content,create_date,creator,dr )
		values 
			(#{id,jdbcType=VARCHAR},
			 #{pageviews,jdbcType=VARCHAR},
			 #{title,jdbcType=VARCHAR},
			 #{describes,jdbcType=VARCHAR},
			 #{greatNumber,jdbcType=VARCHAR},
			 #{badNumber,jdbcType=VARCHAR},
			 #{content,jdbcType=LONGVARCHAR},
			 #{createDate,jdbcType=VARCHAR},
			 #{creator,jdbcType=VARCHAR},
			 #{dr,jdbcType=SMALLINT})
    </insert>
</mapper>
